# Multi-Agent League Management System Configuration
# Copy this file to .env and adjust values as needed

# =============================================================================
# League Manager Configuration
# =============================================================================
LEAGUE_MANAGER_HOST=0.0.0.0
LEAGUE_MANAGER_PORT=8000
LEAGUE_ID=league_2025_even_odd

# =============================================================================
# Referee Configuration
# =============================================================================
REFEREE_HOST=0.0.0.0
REFEREE_PORT=8001
REFEREE_ID=REF01
REFEREE_DISPLAY_NAME=Referee Alpha
REFEREE_VERSION=1.0.0
REFEREE_MAX_CONCURRENT_MATCHES=10

# =============================================================================
# Player Configuration
# =============================================================================
# Base port for players (will use 8101, 8102, 8103, 8104)
PLAYER_BASE_PORT=8101
PLAYER_HOST=0.0.0.0

# Player IDs (comma-separated)
PLAYER_IDS=P01,P02,P03,P04

# Player version
PLAYER_VERSION=1.0.0

# =============================================================================
# Game Configuration
# =============================================================================
# Game type
GAME_TYPE=even_odd

# Timeouts (in seconds)
GAME_INVITATION_TIMEOUT=5
PARITY_CHOICE_TIMEOUT=30
HTTP_REQUEST_TIMEOUT=10

# Random number range for even/odd game
RANDOM_NUMBER_MIN=0
RANDOM_NUMBER_MAX=100

# =============================================================================
# Launcher Configuration
# =============================================================================
# Startup wait time (seconds)
STARTUP_WAIT_TIME=5

# Shutdown timeouts (seconds)
SHUTDOWN_SIGINT_TIMEOUT=5
SHUTDOWN_SIGTERM_TIMEOUT=5

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG

# =============================================================================
# URLs (Auto-generated from above, but can be overridden)
# =============================================================================
# LEAGUE_MANAGER_URL will be http://localhost:${LEAGUE_MANAGER_PORT}/mcp
# REFEREE_URL will be http://localhost:${REFEREE_PORT}/mcp
# PLAYER_URLS will be http://localhost:${PLAYER_BASE_PORT+N}/mcp
