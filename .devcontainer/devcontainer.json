{
    "name": "LLMs and Multi-Agent Orchestration",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "python.defaultInterpreterPath": "/usr/bin/python3"
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "charliermarsh.ruff"
            ]
        }
    },
    "features": {},
    "forwardPorts": [
        11434
    ],
    "postCreateCommand": "echo 'Development container ready! UV and Ollama are installed.' && nohup ollama pull llama3.2:latest > /tmp/ollama-pull.log 2>&1 &",
    "remoteUser": "root",
    "containerEnv": {
        "UV_SYSTEM_PYTHON": "1"
    }
}
