{
    "name": "LLMs and Multi-Agent Orchestration",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash",
                "python.defaultInterpreterPath": "/usr/bin/python3"
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "charliermarsh.ruff"
            ]
        }
    },
    "features": {},
    "forwardPorts": [
        11434
    ],
    "postCreateCommand": "echo 'Development container ready! UV and Ollama are installed.'",
    "remoteUser": "root"
}
